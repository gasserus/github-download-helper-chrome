{
  "manifest_version": 2,
  "name": "Developer's Download Helper",
  "short_name": "DeDoHe",
  "version": "0.3.0",
  "description": "Download files and folders from GitHub or GitLab via context menu.",
  "homepage_url": "https://github.com/lezram/developers-download-helper-chrome",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "browser_action": {
    "default_icon": "images/icon-48.png",
    "default_title": "Developer's Download Helper"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "downloads",
    "storage",
    "notifications",
    "https://*.github.com/*",
    "https://*.githubusercontent.com/*",
    "https://gitlab.com/*"
  ],
  "optional_permissions": [
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "extension@lezram.com",
      "strict_min_version": "42.0"
    }
  }
}
